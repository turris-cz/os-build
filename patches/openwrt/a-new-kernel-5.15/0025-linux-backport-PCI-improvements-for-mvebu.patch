+ 		if (irqnr == 0) {
+@@ -750,6 +906,26 @@ static void armada_370_xp_mpic_resume(void)
+ 		}
+ 	}
+ 
++	/* Re-enable per-CPU SoC Error interrupts */
++	for (irq = 0; irq < soc_err_irq_num_regs * 32; irq++) {
