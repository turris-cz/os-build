++	} else {
++		new = old & ~mask;
++		new |= (value << shift) & mask;
++	}
+ 
+-	/* Save the new value with the cleared W1C bits into the cfgspace */
+-	cfgspace[reg / 4] = cpu_to_le32(new);
++	if (cfgspace) {
++		/* Save the new value with the cleared W1C bits into the cfgspace */
++		cfgspace[reg / 4] = cpu_to_le32(new);
