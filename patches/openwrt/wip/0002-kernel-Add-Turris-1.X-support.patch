++static int
++qca8k_mdio_write(struct qca8k_priv *priv, int port, u32 regnum, u16 data)
++{
++	u32 phy, val;
++
++	if (regnum >= QCA8K_MDIO_MASTER_MAX_REG)
++		return -EINVAL;
++
++	/* callee is responsible for not passing bad ports,
++	 * but we still would like to make spills impossible.
++	 */
