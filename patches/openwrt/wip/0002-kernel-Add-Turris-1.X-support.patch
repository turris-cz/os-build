+-	if ((in_be32(&lbc->bank[priv->bank].br) & BR_DECC) ==
+-	    BR_DECC_CHK_GEN) {
+-		chip->ecc.mode = NAND_ECC_HW;
+-		mtd_set_ooblayout(mtd, &fsl_elbc_ooblayout_ops);
+-		chip->ecc.size = 512;
+-		chip->ecc.bytes = 3;
+-		chip->ecc.strength = 1;
